<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editNomePagador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Pagador"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editCpfPagador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF do Pagador"
            android:inputType="number" />

        <EditText
            android:id="@+id/editNomeRecebedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Recebedor"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editCpfRecebedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF do Recebedor"
            android:inputType="number" />

        <EditText
            android:id="@+id/editValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnGerarRecibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar Recibo"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textRecibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:fontFamily="monospace" />

    </LinearLayout>
</ScrollView> 